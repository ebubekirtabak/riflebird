# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON
[*.{ts,tsx,js,jsx,mjs,cjs,json,jsonc}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Config files
[*.config.{ts,js,mjs}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# Ignore generated files
[dist/**]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore

[node_modules/**]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore
