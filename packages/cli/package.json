{
  "name": "riflebird",
  "version": "0.1.5",
  "description": "AI-powered E2E testing framework - CLI",
  "type": "module",
  "types": "./dist/index.d.ts",
  "bin": {
    "riflebird": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint .",
    "debug": "node --inspect-brk --enable-source-maps ./dist/index.js",
    "debug:fire": "node --inspect-brk --enable-source-maps ./dist/index.js fire"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "jiti": "^2.6.1",
    "openai": "^4.20.1",
    "playwright": "^1.57.0",
    "ora": "^7.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@riflebird/core": "workspace:*",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.27",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "e2e",
    "testing",
    "ai",
    "cli",
    "automation"
  ],
  "author": "Ebubekir Tabak",
  "license": "MIT",
  "homepage": "https://github.com/ebubekirtabak/riflebird#readme",
  "bugs": {
    "url": "https://github.com/ebubekirtabak/riflebird/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ebubekirtabak/riflebird",
    "directory": "packages/cli"
  }
}
