{
  "name": "riflebird",
  "version": "0.1.0",
  "description": "AI-powered test generation and execution framework for unit, integration, E2E, visual, and performance testing",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebubekirtabak/riflebird"
  },
  "keywords": [
    "e2e",
    "testing",
    "ai",
    "playwright",
    "automation",
    "precision",
    "visual-testing"
  ],
  "author": "Ebubekir Tabak",
  "license": "MIT",
  "homepage": "https://github.com/ebubekirtabak/riflebird#readme",
  "bugs": {
    "url": "https://github.com/ebubekirtabak/riflebird/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.23.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "publish": "pnpm changeset publish",
    "ci:publish": "pnpm build && pnpm changeset publish",
    "ci:version": "HUSKY=0 pnpm changeset version",
    "prepare": "husky",
    "security:audit": "pnpm audit --audit-level=high",
    "security:check": "pnpm dlx license-checker --production"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@toon-format/toon": "^2.1.0"
  }
}
